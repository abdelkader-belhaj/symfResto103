    <!-- Modal de confirmation de commande -->
    <div id="orderConfirmModal" style="display:none; position:fixed; z-index:3000; left:0; top:0; width:100vw; height:100vh; background:rgba(0,0,0,0.7); backdrop-filter:blur(3px);">
        <div style="background:linear-gradient(135deg,#1a1a1a 0%,#2d2d2d 100%); color:#fff; max-width:420px; margin:8% auto; border-radius:18px; box-shadow:0 12px 40px rgba(255,165,0,0.25); padding:0; overflow:hidden; border:1px solid rgba(255,165,0,0.15); animation:slideIn 0.4s cubic-bezier(.175,.885,.32,1.275);">
            <div style="background:linear-gradient(45deg,#ffa500,#ff8c00); color:#1a1a1a; padding:28px 30px 18px; border-radius:18px 18px 0 0; text-align:center;">
