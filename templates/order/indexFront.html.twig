     <div class="success-notification" id="successNotification">
        <span>✔</span> Commande envoyée avec succès !
    </div>

    <script>
        // Objet pour stocker les quantités et le panier
        let quantities = {};
        let cart = {};
        let originalPrices = {};

        // Initialiser les prix originaux au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            const menuItems = document.querySelectorAll('.menu-item');
            menuItems.forEach(item => {
                const itemId = item.querySelector('.quantity-display').id.replace('-qty', '');
                const priceText = item.querySelector('.item-price span').textContent;
                originalPrices[itemId] = parseFloat(priceText);
            });

            // Masquer le panier et le total si vide
            document.getElementById('cartSummary').style.display = 'none';
            document.getElementById('cartTotalSection').style.display = 'none';
            document.getElementById('orderBtn').disabled = true;
        });

        function increaseQuantity(itemId) {
            if (!quantities[itemId]) quantities[itemId] = 0;
            quantities[itemId]++;
            document.getElementById(itemId + '-qty').textContent = quantities[itemId];
            updatePrice(itemId);
        }

        function decreaseQuantity(itemId) {
            if (!quantities[itemId] || quantities[itemId] <= 0) return;
            quantities[itemId]--;
            document.getElementById(itemId + '-qty').textContent = quantities[itemId];
            updatePrice(itemId);
        }

        function updatePrice(itemId) {
            const quantity = quantities[itemId] || 0;
            const priceElement = document.getElementById(itemId + '-price');
            const originalPrice = originalPrices[itemId];
            const newPrice = originalPrice * quantity;
            priceElement.textContent = newPrice.toFixed(2);
        }

        function addToCart(itemName, itemId, itemImage) {
            const quantity = quantities[itemId] || 0;
            if (quantity === 0) {
                showErrorNotification('Veuillez sélectionner une quantité avant d\'ajouter au panier.');
                return;
            }

            const originalPrice = originalPrices[itemId];
            const totalPrice = originalPrice * quantity;
            
            if (cart[itemId]) {
                cart[itemId].quantity += quantity;
                cart[itemId].totalPrice += totalPrice;
            } else {
                cart[itemId] = {
                    name: itemName,
                    image: itemImage || null,
                    unitPrice: originalPrice,
                    quantity: quantity,
                    totalPrice: totalPrice
                };
            }

            // Réinitialiser la quantité après ajout au panier
            quantities[itemId] = 0;
            document.getElementById(itemId + '-qty').textContent = '0';
            document.getElementById(itemId + '-price').textContent = originalPrice.toFixed(2);
            
            updateCartSummary();
            showNotification();
        }

        function updateCartSummary() {
            let totalItems = 0;
            let totalPrice = 0;

            for (let itemId in cart) {
                totalItems += cart[itemId].quantity;
                totalPrice += cart[itemId].totalPrice;
            }

            document.getElementById('totalItems').textContent = totalItems;
            document.getElementById('totalPrice').textContent = totalPrice.toFixed(2);
            
            const cartSummary = document.getElementById('cartSummary');
            if (totalItems > 0) {
                cartSummary.style.display = 'flex';
            } else {
                cartSummary.style.display = 'none';
            }
        }

        function showNotification() {
            const notification = document.getElementById('cartNotification');
            notification.classList.add('show');
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        function showErrorNotification(message) {
            const notification = document.getElementById('cartNotification');
            notification.innerHTML = `<span>❌</span> ${message}`;
            notification.style.background = 'linear-gradient(45deg, #ff4757, #ff3742)';
            notification.classList.add('show');
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    notification.innerHTML = '<span>✔</span> Article ajouté au panier !';
                    notification.style.background = 'linear-gradient(45deg, #4CAF50, #45a049)';
                }, 300);
            }, 3000);
        }

        function showDeliveryModal() {
            if (Object.keys(cart).length === 0) {
                alert('Votre panier est vide. Ajoutez des articles avant de commander.');
                return;
            }
            // Réinitialiser les formulaires
            document.querySelectorAll('.delivery-form').forEach(form => {
                form.classList.remove('active');
            });
            document.getElementById('deliveryModal').style.display = 'block';
        }

        function showDeliveryForm(type) {
            // Cacher tous les formulaires d'abord
            document.querySelectorAll('.delivery-form').forEach(form => {
                form.classList.remove('active');
            });
            
            // Afficher le formulaire approprié
            if (type === 'surplace') {
                document.getElementById('surplaceForm').classList.add('active');
            } else {
                document.getElementById('livraisonForm').classList.add('active');
            }
        }

        let isDelivery = false; // Variable globale pour suivre si c'est une livraison
        
        function validateAndSubmitSurplace() {
            // Réinitialiser les messages d'erreur
            resetErrors();
            let isValid = true;

            // Valider le numéro de table
            const tableNumber = document.getElementById('tableNumberDelivery');
            const tableNum = parseInt(tableNumber.value);
            if (!tableNum || tableNum < 1 || tableNum > 50) {
                showError(tableNumber, 'tableError', 'Le numéro de table doit être entre 1 et 50');
                isValid = false;
            }

            if (isValid) {
                isDelivery = false;
                proceedToCart();
            }
        }

        function validateAndSubmitLivraison() {
            // Réinitialiser les messages d'erreur
            resetErrors();
            let isValid = true;

            // Valider l'adresse
            const address = document.getElementById('addressDelivery');
            if (!address.value.trim()) {
                showError(address, 'addressError', 'L\'adresse est obligatoire');
                isValid = false;
            }

            // Valider le numéro de téléphone
            const phone = document.getElementById('phoneDelivery');
            const phoneNumber = parseInt(phone.value);
            if (!phoneNumber || phoneNumber < 10000000 || phoneNumber > 99999999) {
                showError(phone, 'phoneError', 'Le numéro doit être composé de 8 chiffres');
                isValid = false;
            }

            if (isValid) {
                isDelivery = true;
                proceedToCart();
            }
        }

        function showError(inputElement, errorId, message) {
            inputElement.classList.add('error');
            const errorElement = document.getElementById(errorId);
            errorElement.textContent = message;
            errorElement.classList.add('show');
        }

        function resetErrors() {
            const inputs = document.querySelectorAll('.delivery-input');
            const errors = document.querySelectorAll('.error-message');
            
            inputs.forEach(input => input.classList.remove('error'));
            errors.forEach(error => {
                error.textContent = '';
                error.classList.remove('show');
            });
        }

        function proceedToCart() {
            // Masquer le premier modal
            document.getElementById('deliveryModal').style.display = 'none';
            
            // Montrer le deuxième modal (panier)
            const cartModal = document.getElementById('cartModal');
            const cartEmpty = document.getElementById('cartEmpty');
            const cartItems = document.getElementById('cartItems');
            const cartTotalSection = document.getElementById('cartTotalSection');
            const orderBtn = document.getElementById('orderBtn');
            
            cartModal.style.display = 'block';
            
            // Configurer l'affichage du panier
            cartEmpty.style.display = 'none';
            cartItems.style.display = 'block';
            cartTotalSection.style.display = 'flex';
            orderBtn.disabled = false;
            
            // Mettre à jour l'affichage du panier
            renderCartItems();
            updateModalTotal();
        }

        function showCart() {
            const modal = document.getElementById('cartModal');
            const cartEmpty = document.getElementById('cartEmpty');
            const cartItems = document.getElementById('cartItems');
            const cartTotalSection = document.getElementById('cartTotalSection');
            const orderBtn = document.getElementById('orderBtn');
            const orderTypeSection = document.getElementById('orderTypeSection');
            
            modal.style.display = 'block';
            
            // Vérifier si le panier est vide
            const itemCount = Object.keys(cart).length;
            
            if (itemCount === 0) {
                cartEmpty.style.display = 'block';
                cartItems.style.display = 'none';
                cartTotalSection.style.display = 'none';
                orderBtn.disabled = true;
                orderTypeSection.style.display = 'none';
            } else {
                cartEmpty.style.display = 'none';
                cartItems.style.display = 'block';
                cartTotalSection.style.display = 'flex';
                orderBtn.disabled = false;
                // Correction : toujours afficher la section choix type commande si panier non vide
                orderTypeSection.style.display = 'block';
                
                // Réinitialiser le type de commande à "manger ici"
                document.querySelector('input[name="orderType"][value="surplace"]').checked = true;
                handleOrderTypeChange();
                
                renderCartItems();
                updateModalTotal();
            }
        }

        function renderCartItems() {
            const cartItems = document.getElementById('cartItems');
            cartItems.innerHTML = '';
            
            for (let itemId in cart) {
                const item = cart[itemId];
                const cartItemHtml = `
                    <div class="cart-item" id="cart-${itemId}">
                        <div class="cart-item-info">
    <div class="cart-item-image" onclick="openLightbox('${item.image}', '${item.name}')">
        ${
            item.image
                ? `<img src="${item.image}" alt="${item.name}" loading="lazy">`
                : `<div class="image-placeholder">🍽️</div>`
        }
    </div>
    <div class="cart-item-text">
        <div class="cart-item-name" title="${item.name}">${item.name}</div>
        <div class="cart-item-unit-price">${item.unitPrice.toFixed(2)} $ l'unité</div>
    </div>
</div>

                        <div class="cart-item-controls">
                            <div class="cart-quantity-controls">
                                <button class="cart-quantity-btn" onclick="decreaseCartQuantity('${itemId}')" ${item.quantity <= 1 ? 'disabled' : ''}>-</button>
                                <span class="cart-quantity-display" id="cart-${itemId}-qty">${item.quantity}</span>
                                <button class="cart-quantity-btn" onclick="increaseCartQuantity('${itemId}')">+</button>
                            </div>
                            <div class="cart-item-total" id="cart-${itemId}-total">${item.totalPrice.toFixed(2)} $</div>
                            <button class="cart-delete-btn" onclick="removeFromCart('${itemId}')" title="Supprimer cet article">🗑️</button>
                        </div>
                    </div>
                `;
                cartItems.innerHTML += cartItemHtml;
            }
        }

        function increaseCartQuantity(itemId) {
            if (cart[itemId]) {
                cart[itemId].quantity++;
                cart[itemId].totalPrice = cart[itemId].quantity * cart[itemId].unitPrice;
                
                document.getElementById(`cart-${itemId}-qty`).textContent = cart[itemId].quantity;
                document.getElementById(`cart-${itemId}-total`).textContent = `${cart[itemId].totalPrice.toFixed(2)} $`;
                
                // Activer/désactiver le bouton moins
                const decreaseBtn = document.querySelector(`#cart-${itemId} .cart-quantity-btn`);
                if (cart[itemId].quantity > 1) {
                    decreaseBtn.disabled = false;
                }
                
                updateCartSummary();
                updateModalTotal();
            }
        }

        function decreaseCartQuantity(itemId) {
            if (cart[itemId] && cart[itemId].quantity > 1) {
                cart[itemId].quantity--;
                cart[itemId].totalPrice = cart[itemId].quantity * cart[itemId].unitPrice;
                
                document.getElementById(`cart-${itemId}-qty`).textContent = cart[itemId].quantity;
                document.getElementById(`cart-${itemId}-total`).textContent = `${cart[itemId].totalPrice.toFixed(2)} $`;
                
                // Désactiver le bouton moins si quantité = 1
                if (cart[itemId].quantity <= 1) {
                    const decreaseBtn = document.querySelector(`#cart-${itemId} .cart-quantity-btn`);
                    decreaseBtn.disabled = true;
                }
                
                updateCartSummary();
                updateModalTotal();
            }
        }

        function removeFromCart(itemId) {
            if (confirm('Êtes-vous sûr de vouloir supprimer cet article de votre panier ?')) {
                delete cart[itemId];
                
                // Supprimer visuellement l'élément avec animation
                const cartItem = document.getElementById(`cart-${itemId}`);
                if (cartItem) {
                    cartItem.style.transition = 'all 0.3s ease';
                    cartItem.style.opacity = '0';
                    cartItem.style.transform = 'translateX(-100%)';
                    
                    setTimeout(() => {
                        cartItem.remove();
                        
                        // Vérifier si le panier est maintenant vide
                        if (Object.keys(cart).length === 0) {
                            const cartEmpty = document.getElementById('cartEmpty');
                            const cartItems = document.getElementById('cartItems');
                            const cartTotalSection = document.getElementById('cartTotalSection');
                            const orderBtn = document.getElementById('orderBtn');
                            
                            cartEmpty.style.display = 'block';
                            cartItems.style.display = 'none';
                            cartTotalSection.style.display = 'none';
                            orderBtn.disabled = true;
                        }
                    }, 300);
                }
                
                updateCartSummary();
                updateModalTotal();
            }
        }

        function updateModalTotal() {
            let totalPrice = 0;
            for (let itemId in cart) {
                totalPrice += cart[itemId].totalPrice;
            }
            
            const cartTotalSection = document.getElementById('cartTotalSection');

            // Vider la section totale
            cartTotalSection.innerHTML = '';

            if (Object.keys(cart).length > 0) {
                // Créer la section des sous-totaux
                const subtotalDiv = document.createElement('div');
                subtotalDiv.style.width = '100%';
                subtotalDiv.style.padding = '20px 0';

                // Sous-total des articles
                const subtotalText = document.createElement('div');
                subtotalText.style.display = 'flex';
                subtotalText.style.justifyContent = 'space-between';
                subtotalText.style.marginBottom = '10px';
                subtotalText.innerHTML = `
                    <span style="color: #ffffff; font-size: 16px;">Sous-total :</span>
                    <span style="color: #ffa500; font-size: 16px;">${totalPrice.toFixed(2)} $</span>
                `;
                subtotalDiv.appendChild(subtotalText);

                // Frais de livraison si applicable
                if (isDelivery) {
                    totalPrice += 3;
                    const deliveryFeeText = document.createElement('div');
                    deliveryFeeText.style.display = 'flex';
                    deliveryFeeText.style.justifyContent = 'space-between';
                    deliveryFeeText.style.marginBottom = '15px';
                    deliveryFeeText.innerHTML = `
                        <span style="color: #ffffff; font-size: 16px;">Frais de livraison :</span>
                        <span style="color: #ffa500; font-size: 16px;">+3.00 $</span>
                    `;
                    subtotalDiv.appendChild(deliveryFeeText);
                }

                // Ligne de séparation
                const separator = document.createElement('hr');
                separator.style.border = 'none';
                separator.style.borderTop = '1px solid rgba(255, 165, 0, 0.2)';
                separator.style.margin = '15px 0';
                subtotalDiv.appendChild(separator);

                // Total final
                const totalText = document.createElement('div');
                totalText.style.display = 'flex';
                totalText.style.justifyContent = 'space-between';
                totalText.style.alignItems = 'center';
                totalText.innerHTML = `
                    <span style="color: #ffffff; font-size: 22px; font-weight: 600;">Total :</span>
                    <span style="color: #ffa500; font-size: 28px; font-weight: 700;">${totalPrice.toFixed(2)} $</span>
                `;
                subtotalDiv.appendChild(totalText);

                cartTotalSection.appendChild(subtotalDiv);
                cartTotalSection.style.display = 'block';
            } else {
                cartTotalSection.style.display = 'none';
            }
        }

        function closeCart() {
            const modal = document.getElementById('cartModal');
            modal.style.display = 'none';
        }

        // Ajout gestion du type de commande
        let orderType = 'surplace';

        function handleOrderTypeChange() {
            const type = document.querySelector('input[name="orderType"]:checked').value;
            orderType = type;
            
            // Mettre à jour l'affichage des champs
            document.getElementById('tableNumberDiv').style.display = type === 'surplace' ? '' : 'none';
            document.getElementById('deliveryFields').style.display = type === 'livraison' ? '' : 'none';
            
            // Mettre à jour la classe active sur les options
            document.querySelectorAll('.delivery-option').forEach(option => {
                if (option.querySelector('input[type="radio"]').value === type) {
                    option.classList.add('active');
                } else {
                    option.classList.remove('active');
                }
            });
            
            // Mettre à jour les prix avec les frais de livraison
            updateModalTotal();
        }
        async function submitOrder() {
            // Vérifier si le panier est vide
            if (Object.keys(cart).length === 0) {
                showErrorNotification('Votre panier est vide !');
                return;
            }
            
            // Préparer le résumé de la commande pour l'affichage
            let orderSummary = '<div style="font-size:17px; font-weight:600; margin-bottom:10px;">🍽️ COMMANDE BORCELLE RESTO 🍽️</div>';
            orderSummary += '<hr style="border:0; border-top:1px solid #ffa500; margin:10px 0;">';
            
            let totalPrice = 0, totalItems = 0;
            for (let itemId in cart) {
                const item = cart[itemId];
                orderSummary += `<div style="margin-bottom:7px;"><span style="font-weight:500;">${item.name}</span><br><span style="font-size:15px; color:#ffa500;">${item.quantity} × ${item.unitPrice.toFixed(2)} $</span> <span style="color:#fff;">=</span> <span style="color:#ffa500;">${item.totalPrice.toFixed(2)} $</span></div>`;
                totalPrice += item.totalPrice;
                totalItems += item.quantity;
            }
            
            orderSummary += '<hr style="border:0; border-top:1px solid #ffa500; margin:10px 0;">';
            orderSummary += `<div style="font-size:16px;">Total des articles : <b>${totalItems}</b></div>`;
            
            // Ajouter les frais de livraison si nécessaire
            const isDelivery = document.querySelector('input[name="orderType"]:checked')?.value === 'livraison';
            if (isDelivery) {
                orderSummary += `<div style="font-size:16px; margin-top:5px;">Frais de livraison : <span style="color:#ffa500;">3.00 $</span></div>`;
                totalPrice += 3;
            }
            
            orderSummary += `<div style="font-size:18px; color:#ffa500; font-weight:700; margin-top:10px;">TOTAL À PAYER : ${totalPrice.toFixed(2)} $</div>`;
            orderSummary += '<div style="margin-top:10px; font-size:14px; color:#bbb;">Merci pour votre commande ! 🙏<br>Votre commande sera préparée sous peu.</div>';

            // Afficher le modal de confirmation
            document.getElementById('orderConfirmSummary').innerHTML = orderSummary;
            document.getElementById('orderConfirmModal').style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeOrderConfirmModal() {
            document.getElementById('orderConfirmModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        async function confirmOrder() {
            try {
                // Calculer le prix total
                let totalPrice = 0;
                for (let itemId in cart) {
                    totalPrice += cart[itemId].totalPrice;
                }
                if (isDelivery) totalPrice += 3;

                // Créer les données de la commande avec plus de détails
                const orderData = {
                    items: Object.entries(cart).map(([id, item]) => ({
                        id,
                        title: item.name,  // Titre du repas
                        description: item.description || '',  // Description si disponible
                        category: item.type || '',  // Catégorie du repas
                        quantity: item.quantity,  // Quantité commandée
                        unitPrice: item.unitPrice,  // Prix unitaire
                        totalPrice: item.totalPrice,  // Prix total pour cet article
                        image: item.image,  // Image du repas
                        customizations: item.customizations || []  // Personnalisations éventuelles
                    })),
                    orderSummary: {
                        totalQuantity: Object.values(cart).reduce((sum, item) => sum + item.quantity, 0),
                        subtotal: totalPrice,
                        deliveryFee: isDelivery ? 3 : 0,
                        totalAmount: isDelivery ? totalPrice + 3 : totalPrice
                    },
                    orderType: isDelivery ? "Livraison" : "Sur place",
                    orderDate: new Date().toISOString()
                };

                // Ajouter les informations du client
                orderData.customerInfo = {
                    name: {% if app.session.get('user') %}'{{ app.session.get('user').nomComplete }}'{% else %}''{% endif %},
                    phone: isDelivery ? document.getElementById('phoneDelivery').value : '',
                    address: isDelivery ? document.getElementById('addressDelivery').value : '',
                    tableNumber: !isDelivery ? document.getElementById('tableNumberDelivery').value : ''
                };

                // Envoyer la commande à l'API
                const response = await fetch('/api/orders', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(orderData)
                });

                if (!response.ok) {
                    throw new Error('Erreur lors de l\'envoi de la commande');
                }

                const result = await response.json();
                
                // Réinitialiser le panier après une commande réussie
                cart = {};
                localStorage.removeItem('cart');
                
                // Mettre à jour l'affichage
                for (let itemId in originalPrices) {
                    const qtyElement = document.getElementById(itemId + '-qty');
                    const priceElement = document.getElementById(itemId + '-price');
                    if (qtyElement) qtyElement.textContent = '0';
                    if (priceElement) priceElement.textContent = originalPrices[itemId].toFixed(2);
                }
                updateCartSummary();
                
                // Fermer les modals
                closeCart();
                closeOrderConfirmModal();
                
                // Afficher la notification de succès
                document.getElementById('successNotification').classList.add('show');
                setTimeout(() => {
                    document.getElementById('successNotification').classList.remove('show');
                }, 3000);
                
            } catch (error) {
                console.error('Erreur:', error);
                showErrorNotification('Erreur lors de l\'envoi de la commande. Veuillez réessayer.');
            } finally {
                closeOrderConfirmModal();
            }
        }

        // Fermer la modal de confirmation en cliquant dehors ou sur Escape
        window.addEventListener('click', function(event) {
            const modal = document.getElementById('orderConfirmModal');
            if (event.target === modal) closeOrderConfirmModal();
        });
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') closeOrderConfirmModal();
        });

        // Lightbox functions
        function openLightbox(imageSrc, caption) {
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightbox-img');
            const lightboxCaption = document.getElementById('lightbox-caption');
            
            if (imageSrc) {
                lightboxImg.src = imageSrc;
                lightboxCaption.textContent = caption;
                lightbox.style.display = 'block';
                document.body.style.overflow = 'hidden';
            }
        }

        function closeLightbox() {
            const lightbox = document.getElementById('lightbox');
            lightbox.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Fermer la modal en cliquant en dehors
        window.onclick = function(event) {
            const modal = document.getElementById('cartModal');
            const lightbox = document.getElementById('lightbox');
            
            if (event.target == modal) {
                closeCart();
            }
            
            if (event.target == lightbox) {
                closeLightbox();
            }
        }

        // Gestion des touches clavier
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeCart();
                closeLightbox();
            }
        });
    </script>
