    <style>
        @import url('https://www.bing.com/images/search?q=image%20resto&FORM=IQFRBA&id=5BE7F94058C7F849777F385ED010DEDE9E1D16BE');

        .floating-home-btn {
            position: fixed;
            bottom: 30px;
            left: 30px;
            z-index: 9999;
            text-decoration: none;
        }

        .home-icon-wrapper {
            width: 60px;
            height: 60px;
            background: linear-gradient(145deg, #ffbe33, #ff9900);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 15px rgba(255, 190, 51, 0.4);
            transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            position: relative;
            overflow: hidden;
        }

        .home-icon-wrapper::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            top: 0;
            left: -100%;
            transition: 0.5s;
        }

        .home-icon-wrapper:hover::before {
            left: 100%;
        }

        .home-icon-wrapper:hover {
            transform: translateY(-5px) rotate(8deg);
            box-shadow: 0 8px 25px rgba(255, 190, 51, 0.6);
        }

        .home-icon-wrapper i {
            color: white;
            font-size: 28px;
            transition: all 0.3s ease;
        }

        .home-icon-wrapper:hover i {
            transform: scale(1.2);
        }

        .tooltip-text {
            position: absolute;
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
            left: 70px;
            white-space: nowrap;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

        .floating-home-btn:hover .tooltip-text {
            opacity: 1;
            visibility: visible;
        }

        .delivery-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            z-index: 2000;
            backdrop-filter: blur(5px);
        }

        .delivery-modal-content {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            border: 1px solid rgba(255, 165, 0, 0.2);
            border-radius: 20px;
            width: 90%;
            max-width: 500px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 30px;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        .delivery-modal-title {
            color: #ffa500;
            font-size: 24px;
            margin-bottom: 30px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .delivery-choices {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-top: 20px;
        }

        .delivery-choice-btn {
            background: rgba(255, 165, 0, 0.1);
            border: 2px solid rgba(255, 165, 0, 0.3);
            border-radius: 15px;
            padding: 30px 20px;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }

        .delivery-choice-btn:hover {
            background: rgba(255, 165, 0, 0.2);
            transform: translateY(-5px);
            border-color: #ffa500;
            box-shadow: 0 10px 20px rgba(255, 165, 0, 0.2);
        }

        .delivery-choice-btn .icon {
            font-size: 40px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .delivery-choice-btn .text {
            font-size: 18px;
            font-weight: 600;
            text-align: center;
            line-height: 1.4;
        }

        .delivery-option-container {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .delivery-form {
            display: none;
            flex-direction: column;
            gap: 10px;
            margin-top: 10px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            border: 1px solid rgba(255, 165, 0, 0.2);
        }

        .delivery-form.active {
            display: flex;
            animation: slideDown 0.3s ease-out;
        }

        .input-group {
            position: relative;
            margin-bottom: 15px;
        }

        .delivery-input {
            padding: 12px;
            border-radius: 8px;
            border: 1px solid rgba(255, 165, 0, 0.3);
            background: rgba(255, 255, 255, 0.1);
            color: white;
            font-size: 16px;
            width: 100%;
            transition: all 0.3s ease;
        }

        .delivery-input:focus {
            outline: none;
            border-color: #ffa500;
            background: rgba(255, 255, 255, 0.15);
        }

        .delivery-input::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .delivery-input.error {
            border-color: #ff4757;
            animation: shake 0.5s;
        }

        .error-message {
            color: #ff4757;
            font-size: 12px;
            margin-top: 5px;
            display: none;
            position: absolute;
            bottom: -20px;
            left: 0;
        }

        .error-message.show {
            display: block;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        /* Désactiver les flèches pour l'input number */
        .delivery-input[type="number"]::-webkit-inner-spin-button,
        .delivery-input[type="number"]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        
        .delivery-input[type="number"] {
            -moz-appearance: textfield;
        }

        .delivery-submit {
            padding: 12px;
            background: #ffa500;
            border: none;
            border-radius: 8px;
            color: #1a1a1a;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .delivery-submit:hover {
            background: #ff8c00;
            transform: translateY(-2px);
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
