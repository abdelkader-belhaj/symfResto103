}

function showLoginAlert(targetUrl) {
    const alertBox = document.createElement('div');
    alertBox.style.position = 'fixed';
    alertBox.style.top = '0';
    alertBox.style.left = '0';
    alertBox.style.width = '100%';
    alertBox.style.height = '100%';
    alertBox.style.backgroundColor = 'rgba(0,0,0,0.5)';
    alertBox.style.display = 'flex';
    alertBox.style.justifyContent = 'center';
    alertBox.style.alignItems = 'center';
    alertBox.style.zIndex = '9999';
    
    // Création d'un élément script pour stocker la targetUrl
    const urlScript = document.createElement('script');
    urlScript.textContent = `var loginRedirectUrl = '${targetUrl}';`;
    
    alertBox.innerHTML = `
        <div style="background: white; padding: 30px; border-radius: 10px; text-align: center; max-width: 400px;">
            <h4 style="color: #ff6b35; margin-bottom: 20px;">Connexion requise</h4>
            <p style="margin-bottom: 25px;">Vous devez vous connecter avant de pouvoir effectuer cette action.</p>
            <div>
                <button id="loginAlertBtn" 
                        style="background: #ff6b35; color: white; border: none; padding: 10px 20px; 
                               border-radius: 5px; font-weight: bold; cursor: pointer; margin-right: 10px;">
                    Se connecter
                </button>
                <button id="cancelAlertBtn" 
                        style="background: #6c757d; color: white; border: none; padding: 10px 20px; 
                               border-radius: 5px; cursor: pointer;">
                    Annuler
                </button>
            </div>
        </div>
    `;
    
    document.body.appendChild(alertBox);
    document.body.appendChild(urlScript);
    
    // Gestion des événements avec addEventListener
    document.getElementById('loginAlertBtn').addEventListener('click', function() {
        window.location.href = '{{ path('app_login') }}?redirect=' + encodeURIComponent(loginRedirectUrl);
    });
    
    document.getElementById('cancelAlertBtn').addEventListener('click', function() {
        alertBox.remove();
        urlScript.remove();
    });
}
</script>



